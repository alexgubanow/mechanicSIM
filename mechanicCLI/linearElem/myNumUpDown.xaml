<UserControl x:Name="parent" x:Class="linearElem.myNumUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:linearElem"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding ElementName=parent}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="{Binding Path=ControlLabel}"
                              FontFamily="{DynamicResource ContentFontFamily}"
                              FontSize="{DynamicResource ContentFontSize}" 
               Visibility="{Binding Path=labelVisability}"/>

        <Controls:NumericUpDown Grid.Row="1" Value="{Binding Path=ValueInt}" />
    </Grid>
</UserControl>
